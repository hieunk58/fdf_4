<div class="col-md-6 col-md-offset-3">
  <%= form_for @suggest do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.text_area :suggest, placeholder: t("suggestion.add") %>
    </div>
    <%= f.submit t("suggestion.button"), class: "btn btn-primary" %>
  <% end %>
</div>
