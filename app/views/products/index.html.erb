<

<div class="container">
  <%= will_paginate @products %>
  <br>
  <div class ="row">
    <% @products.each do |product| %>
      <div class="row_food">
        <% if product.images.present? %>
        <%= link_to image_tag(product.images), products_path %>
        <% else %>
        <%= link_to image_tag(Settings.products.url), product %>
        <% end %>
        <h4><%= link_to product.product_name, product_path(product) %></h4>
        <p><%= product.price %></p>
        <p><%= product.quantity %></p>
        <p><%= product.description %></p>
        <div class="col-xs-4">
          <%= form_for @order_detail, remote: true do |f| %>
          <h4> <class="text-right"><%= t("order.unit_price")%>
            <span style="color: green"><%= number_to_currency product.price %></span>
          </h4>
          <div class="input-group">
            <%= f.number_field :quantity_ordered, value: 1, class: "form-control", min: 1 %>
            <div class="input-group-btn">
              <%= f.hidden_field :product_id, value: product.id %>
              <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @products %>
</div>

<h3 class="text-center"><%= t "order.products_for_sale" %></h3>
<div class="row">
  <div class="col-xs-4 col-xs-offset-8">
    <div class="text-right">
      <h4 class="order-text">
        <%= render "layouts/order_text" %>
      </h4>
    </div>
  </div>
</div>
