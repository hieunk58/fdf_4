<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="logo">
    <%= link_to t("views.food"), root_path, id: "logo" %>
  </div>
  <div class="main">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("views.home_link"), root_path %></li>
        <li><%= link_to t("views.category_link"), "#" %></li>
        <li><%= link_to t("views.signup_link"), signup_path %></li>
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "sign_in.signed_in_header" %> <b class="caret"></b>
            </a>
            <ul>
              <li><%= link_to t("signin.orders"), current_user %></li>
              <li><%= link_to t("signin.profile"), current_user %></li>
              <li><%= link_to t("signin.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signout.signout_button"), signout_path,
                  method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("views.signin_link"), signin_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
